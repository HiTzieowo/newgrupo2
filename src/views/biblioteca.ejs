<!DOCTYPE html>
<html lang="en">


<head>
    <!-- HEAD -->
    <%- include("partials/head") %>
    <!-- link para cargar los css  -->
    <link rel="stylesheet" href="/css/biblioteca.css">
</head>

<body>
    <!--    HEADER  -->
    <%- include("partials/header") %>

    <main>
        <!-- Contenedor de los productos -->
        <div class="contenedor-productos">
            <% products.forEach(product => { %>
            <!-- Productos01 -->
                <article class="producto">
              
                <div class="contenido-producto">
                    <div class="imagenes-ultimas-visitas">
                        <img src="/img/<%= product.image %>" alt="Imagen de MacBook">
                    </div>
                    <div class="descripcion-producto">
                        <h2 class="titulo"><%= product.name %></h2>
                        <div class="contenedor-flex">

                            <div class="icono-descarga">
                                <i class="fa-solid fa-download"></i>
                            </div>
                            <p class="precio">instalar</p>
                        </div>

                    </div>
                </div>
                </article>

            <% }); %>
        </div>

    </main>
    <!-- Botón con la imagen -->
    <a href="https://chat.whatsapp.com/Bg7AfwgEvoiFvSxENXjvJT" class="boton-imagen">
        <img src="/img/whasapp.png" alt="Botón con Imagen">
    </a>
</body>

</html>