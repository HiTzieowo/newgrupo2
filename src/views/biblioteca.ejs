<!DOCTYPE html>
<html lang="en">


<head>
    <!-- HEAD -->
    <%- include("partials/head") %>
        <!-- link para cargar los css  -->
        <link rel="stylesheet" href="/css/biblioteca.css">
        <link rel="stylesheet" href="/css/normalize.css">
        <title>炎Biblioteca炎</title>
</head>

<body>
    <!--    HEADER  -->
    <%- include("partials/header") %>

        <main>
            <!-- Contenedor de los productos -->
            <div class="contenedor-productos">
                <% products.forEach(product=> { %>
                    <!-- Productos01 -->
                    <article class="producto">

                        <div class="contenido-producto">
                            
                            <a href="/producto/<%= product.id %>">
                                <div class="imagenes-ultimas-visitas">
                                    <img src="/img/productos/<%= product.image %>" alt="">
                                </div>
                            </a>
                            <div class="descripcion-producto">
                                <div class="titulo">
                                    <a href="/producto/<%= product.id %>">
                                        <p>
                                            <%= product.name %>
                                        </p>
                                    </a>
                                </div>
                                <div class="precio">

                                    <!-- <div class="icono-descarga">
                                <i class="fa-solid fa-download"></i>
                            </div> -->
                                    <p> $ <%= product.price %>
                                    </p>
                                </div>

                            </div>

                        </div>
                    </article>

                    <% }); %>
            </div>

        </main>
        <!-- Botón con la imagen -->
        <!-- <a href="https://chat.whatsapp.com/Bg7AfwgEvoiFvSxENXjvJT" class="boton-imagen">
            <img src="/img/whasapp.png" alt="Botón con Imagen">
        </a> -->

        <footer>
            <%- include("partials/footer") %>
        </footer>
</body>

</html>